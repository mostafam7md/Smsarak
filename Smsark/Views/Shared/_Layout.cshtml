<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication16</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Smsark.styles.css" asp-append-version="true" />


 
</head>
<body style="background-color:whitesmoke; margin-bottom:0px">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow " style="background-color:#609EA2; color:white">
            <div class="container-fluid" style="justify-content:center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-size:2rem; margin-left:200px; font-family:'Comic Sans MS';color:whitesmoke">HouseMania</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="justify-content:left">
                    <ul class="navbar-nav flex-grow-1" style="justify-content:center; font-size:1.25rem; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color:white">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color:whitesmoke"> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Booking" style="color:whitesmoke">Rooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="abt" style="color:whitesmoke">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Contact" style="color:whitesmoke">Contact</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1" style="justify-content:right; font-size:1.25rem; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color:white">
                      
                        <li>
                             <a class="nav-link" asp-area="" asp-controller="Home" asp-action="signin" style="color:whitesmoke"> Sign in</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="signup" style="color:whitesmoke">Sign up</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin:0px 0px 0px 0px; padding:0px 0px 0px 0px; width:3000px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="background-color:whitesmoke; margin-top:0px">
            &copy; 2023 - HouseMania - <a asp-area="" asp-controller="Home" asp-action="">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
